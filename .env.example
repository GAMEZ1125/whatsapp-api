# Configuración del Servidor
PORT=3000
NODE_ENV=development

# API Keys para autenticación
# MASTER_KEY: Key principal para gestionar otras API Keys (crear, revocar, etc.)
# Genera una key segura con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_KEY=tu-master-key-segura-aqui

# Las API Keys adicionales se generan desde /api/auth/keys usando la Master Key

# Configuración de WhatsApp
SESSION_NAME=whatsapp-session
HEADLESS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=info
